<!DOCTYPE html>
<html>
<head>
  <title>Erde</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

</head>

<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <nav class="navbar navbar-light bg-light">
    <h4>
      <strong>Erde</strong>
    </h4>
  </nav>
  <div class="collapse navbar-collapse" id="navbarText">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" href="#">Получить визу<span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Мои документы</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Мои визы</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Контакты</a>
      </li>
    </ul>
    <a class="button" href="#">Sign in</a>
  </div>
</nav>


<div class="container">
  <% if @step %>
    <div class="row">
      <div class="col-md-12 form-progress-bar">
        <div class="progress" style="height: 1px;">
          <div class="progress-bar" role="progressbar" style="width: <%= @step.progress_percentage %>%;" aria-valuenow="<%= @step.progress_percentage %>" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
        <div class="progress" style="height: 9px;">
          <div class="progress-bar" role="progressbar" style="width: <%= @step.progress_percentage %>%;" aria-valuenow="<%= @step.progress_percentage %>" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
      </div>
  <% end %>

  <%= yield %>
  </div>
</div>

</body>
</html>
