<div class="col-md-12 form-progress-bar">
  <div class="progress" style="height: 1px;">
    <div class="progress-bar" role="progressbar" style="width: 45%;" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100"></div>
  </div>
  <div class="progress" style="height: 9px;">
    <div class="progress-bar" role="progressbar" style="width: 45%;" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100"></div>
  </div>
</div>

<form>

  <div class="col-md-12 form-group visa-applications-form">
    <h4>
      <strong>Тип проездного документа</strong>
    </h4>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1">
      <label class="form-check-label" for="inlineRadio1">Обычный паспорт</label>
    </div>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option2">
      <label class="form-check-label" for="inlineRadio2">Дипломатичсекий паспорт</label>
    </div>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio3" value="option3">
      <label class="form-check-label" for="inlineRadio3">Служебный паспорт</label>
    </div>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio4" value="option4">
      <label class="form-check-label" for="inlineRadio4">Официальный паспорт</label>
    </div>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio5" value="option5">
      <label class="form-check-label" for="inlineRadio5">Особый паспорт</label>
    </div>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio6" value="option6">
      <label class="form-check-label" for="inlineRadio6">Другой (уточните)</label>
    </div>
  </div>

  <div class="form-group col-md-7 form-group visa-applications-form">
    <input type="textanswer" class="form-control col-md-9" id="FormControlInput1" placeholder="Уточните тип проездного документа">
  </div>

  <div class="form-group col-md-7 form-group visa-applications-form">
    <h4>
      <strong>Номер проездного документа</strong>
    </h4>
    <input type="textanswer" class="form-control col-md-9" id="FormControlInput1" placeholder="Введите номер проездного документа">
  </div>

  <div class="form-group col-md-7 form-group visa-applications-form">
    <h4>
      <strong>Дата выдачи</strong>
    </h4>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" />
    <div class="dates">
      <div class="start_date input-group mb-4">
        <input class="form-control start_date" type="date" id="startdate_datepicker">
      </div>
    </div>
  </div>

  <div class="form-group col-md-7 form-group visa-applications-form">
    <h4>
      <strong>Действителен до</strong>
    </h4>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" />
    <div class="dates">
      <div class="start_date input-group mb-4">
        <input class="form-control start_date" type="date" id="startdate_datepicker">
      </div>
    </div>
  </div>

  <div class="form-group col-md-7 form-group visa-applications-form">
    <h4>
      <strong>Кем выдан</strong>
    </h4>
    <input type="textanswer" class="form-control col-md-9" id="FormControlInput1" placeholder="Укажите, кем выдан проездной документ">
  </div>

  <div class="col-md-7 visa-applications-button">
    <%= link_to 'Далее', visa_applications_path(:step => "13"), class: "btn btn-primary"%>
  </div>

</form>
