<p id="notice"><%= notice %></p>

<h1>Step Questions</h1>

<table>
  <thead>
    <tr>
      <th>Step</th>
      <th>Question</th>
      <th>Position</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @step_questions.each do |step_question| %>
      <tr>
        <td><%= step_question.step_id %></td>
        <td><%= step_question.question_id %></td>
        <td><%= step_question.position %></td>
        <td><%= link_to 'Show', step_question %></td>
        <td><%= link_to 'Edit', edit_step_question_path(step_question) %></td>
        <td><%= link_to 'Destroy', step_question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Step Question', new_step_question_path %>
